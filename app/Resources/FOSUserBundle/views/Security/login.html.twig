{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %}{{'login.signin'|trans}}{% endblock %}


{% block fos_user_content %}

	<div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
		<div class="panel panel-info">
			<div class="panel-heading">
				<div class="panel-title">{{'login.signin'|trans}}</div>
			</div>
			{% trans_default_domain 'FOSUserBundle' %}
			<div class="panel-body">
				{% if error %}
					<div id="login-alert" class="alert alert-danger col-sm-12" role="alert">
						{{error.messageKey|trans(error.messageData, 'security')}}
					</div>
				{% endif %}

				<form action="{{path('fos_user_security_check')}}" method="post" class="form-signin form-horizontal" role="form">
					<input type="hidden" name="_csrf_token" value="{{csrf_token}}"/>

					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
						<input type="text" id="username" name="_username" value="{{last_username}}" placeholder="{{'security.login.username'|trans}}" class="form-control" required autofocus/>
					</div>
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
						<input type="password" id="password" name="_password" class="form-control" placeholder="{{'security.login.password'|trans}}" required />
					</div>
					<div class="input-group">
						<div class="checkbox">
							<label>
								<input type="checkbox" id="remember_me" name="_remember_me" value="on" />&nbsp;&nbsp;&nbsp;{{'security.login.remember_me'|trans}}
							</label>
						</div>
					</div>
					<div class="form-group">
						<!-- Button -->
						<div class="col-sm-12 controls">
							<input type="submit" class="btn btn-lg btn-success btn-block" id="_submit" name="_submit" value="{{'security.login.submit'|trans}}"/>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

{% endblock fos_user_content %}


{% block stylesheets %}
	<style>
		{% filter sass %}
		#loginbox {
			margin-top: 50px;
			.panel-body {
				padding-top: 30px;
			}

			.input-group {
				margin-bottom: 25px;
			}

			.form-group {
				margin-top: 10px;
			}
		}
		{% endfilter %}
	</style>
{% endblock %}
